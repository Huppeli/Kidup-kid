        android:paddingRight="30px"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="27px"
        tools:context="com.thedroidboy.lockscreentest.MainActivity"
        android:weightSum="1"
        android:background="@color/colorAqua">>
    -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kidupLogo"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kidup_logo_icon"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/kidupDarkBlue"
            android:text="Pekka"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/kidupDarkBlue"
            android:text="Last update: Now"
            android:layout_below="@+id/userName"
            />
        <!-- Layout for content is here. This can be a RelativeLayout  -->
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tableRow1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_white"
            android:gravity="center"
            android:id="@+id/btnFinish"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your screentime"

                android:textSize="16sp"
                android:textColor="@color/kidupDarkBlue"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/pieView"/>
            <az.plainpie.PieView
                android:id="@+id/pieView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                plainpie:inner_pie_padding="25"
                plainpie:percentage="75"
                plainpie:percentage_size="22"
                plainpie:inner_text_visibility="true"
                android:layout_marginBottom="10dp"
                />
            <!-- layout_margin = hack to get it center -->
            <TextView
                android:id="@+id/tapThisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap this"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/kidupDarkBlue"
                android:layout_below="@+id/pieView"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textSmaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Convert activity into screentime"
                android:textColor="@color/kidupDarkBlue"
                android:layout_below="@+id/tapThisText"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_white"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/yourTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helping hands"
                android:textSize="16dp"
                android:textColor="@color/kidupDarkBlue"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:id="@+id/currentTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="76sp"
                android:textColor="@color/kidupBrightBlue"
                android:textStyle="bold"
                android:layout_below="@+id/yourTasks"
                android:layout_alignLeft="@+id/yourTasks"
                android:layout_alignStart="@+id/yourTasks" />
            <TextView
                android:id="@+id/currenttaskMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 3"
                android:textSize="32sp"
                android:textColor="@color/kidupBrightBlue"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/currentTasks"
                android:layout_alignBottom="@+id/currentTasks"
                android:layout_toRightOf="@+id/currentTasks"
                android:layout_toEndOf="@+id/currentTasks" />

            <TextView
                android:id="@+id/fillerTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks remaining"
                android:layout_marginTop="30dp"
                android:textSize="16dp"
                android:textColor="@color/kidupDarkBlue"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"

                android:layout_centerInParent="true"
                android:layout_below="@id/currentTasks"

                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tableRow2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_white"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/activityHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/kidupDarkBlue"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_above="@+id/pieView2"
                />
            <az.plainpie.PieView
                android:id="@+id/pieView2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                plainpie:inner_pie_padding="25"
                plainpie:percentage="50"
                plainpie:percentage_size="22"
                plainpie:inner_text_visibility="true"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/stepTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day's total XXXX"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/kidupDarkBlue"
                android:layout_below="@+id/pieView2"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/stepTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily target: 6600"
                android:textSize="10sp"
                android:textColor="@color/kidupDarkBlue"
                android:layout_below="@id/stepTotal"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_white"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's have fun"
                android:textSize="16sp"
                android:textColor="@color/kidupDarkBlue"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/pandaImage"/>
            <ImageView
                android:id="@+id/pandaImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/panda_phone_gray"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click me to unlock"
                android:textSize="16dp"
                android:textColor="@color/kidupDarkBlue"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@id/pandaImage"
                android:layout_marginBottom="-20dp"/>
        </RelativeLayout>

    </LinearLayout>
</TableLayout>
